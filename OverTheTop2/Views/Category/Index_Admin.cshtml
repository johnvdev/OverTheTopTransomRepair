@model IEnumerable<OverTheTop2.Models.Category>

@{
    ViewBag.Title = "Index";
}
<div class="row" ><div class="col-md-4"> @Html.ActionLink("New Category", "New", "Category", null, new { @class = "btn btn-primary" })</div></div>
<div class="row " >
      
    @foreach (var category in Model)
    {

        <div class="col-lg-6">
            <div class="card shadow">

                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Edit Title and Description", "Edit", "Category", new { id = category.id }, new { @class = "btn btn-primary" })
                        <h1><a runat="server" href="#">@category.Name</a></h1>
                        <h5 class="well">&emsp; @category.Description</h5>

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Add SubCategory", "New", "SubCategories", new { id = category.id }, new { @class = "btn btn-primary" })
                        <ul class="list-group">
                            @foreach (var sub in category.SubCategory)
                            {
                                @Html.ActionLink(sub.Name, "Details", "SubCategories", new { id = sub.Id }, new { @class = "list-group-item" })
                            }
                        </ul>

                    </div>
                </div>
                <div class="row">



                    <div class="col-lg-12">
                        @Html.ActionLink("Add/ Remove images", "Index", "CategoryImages", new{ id=category.id} , new { @class = "btn btn-primary" })
                        <div id="@category.id" class="carousel slide" data-ride="carousel">

                            <ol class="carousel-indicators">
                                @for (var i = 0; i < category.CategoryImages.Count(); i++)
                                {
                                    var active = "";
                                    if (i == 0)
                                    {
                                        active = "active";

                                    }
                                    else
                                    {
                                        active = "";
                                    }
                                    <li data-target="#@category.id" data-slide-to="@i" class="@active"></li>
                                }
                            </ol>


                            <div class="carousel-inner">
                                @{
                                    var im = 0;
                                }
                                @foreach (var img in category.CategoryImages)
                                {
                                    var active = "";
                                    if (im == 0)
                                    {
                                        active = "item active";

                                    }
                                    else
                                    {
                                        active = "item";
                                    }
                                    <div class="@active">
                                        <img src="@Url.Content(img.Image)" value="@img.Image"/>
                                    </div>
                                    im++;
                                }
                            </div>


                            <a class="left carousel-control" href="#@category.id" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#@category.id" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    }
</div>

